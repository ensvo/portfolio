<!--------------------SKILLS-------------------->
<% languages = ["HTML5", "CSS3/Sass", "JavaScript", "Ruby"] %>
<% frameworks = ["Ruby on Rails", "xReact", "xTailwind CSS", "Bootstrap", "SQL", "PostgreSQL", "SQLite3"] %>
<% tools = ["Git/Github", "Heroku", "Netlify", "Command Line", "Figma", "Trello", "Slack", "G-Suite"] %>
<% hard_skills = ["English (Native)", "Japanese (JLPT N2)", "Responsive Design", "UI & UX Design", "APIs/Scraping", "OOP", "Product Prototyping"] %>
<div class="teal-background">
	<a id="skills"></a>
	<div class="content-container section skills-container">
		<h1 data-aos="flip-down" class="section-header">Technical Stack and Skills</h1>
		<div class="paragraph-container">

			<div class="paragraph-content" data-aos="fade-right">
				<h4 class="p-white-text">Languages</h4>
				<% languages.each do |x| %>
					<div class="skill">
						<p><%= x %></p>
					</div>
				<% end %>
			</div>

			<div class="paragraph-content" data-aos="fade-right">
				<h4 class="p-white-text">Libraries & Frameworks</h4>
				<% frameworks.each do |x| %>
					<div class="skill">
						<% if x[0] != "x" %>
							<p><%= x %></p>
						<% end %>
					</div>
				<% end %>
			</div>

			<div class="paragraph-content" data-aos="fade-left">
				<h4 class="p-white-text">Tools & Platforms</h4>
				<% tools.each do |x| %>
					<div class="skill">
						<p><%= x %></p>
					</div>
				<% end %>
			</div>

			<div class="paragraph-content" data-aos="fade-left">
				<h4 class="p-white-text">Hard Skills</h4>
				<% hard_skills.each do |x| %>
					<div class="skill">
						<p><%= x %></p>
					</div>
				<% end %>
			</div>

		</div>
	</div>
</div>

